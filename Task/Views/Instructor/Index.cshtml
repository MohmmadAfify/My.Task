@model IEnumerable<Instructor>

@{
    ViewBag.Title = "Instructors List";
}

<h2>Instructors List</h2>

<p>
    @Html.ActionLink("Add New Instructor", "Create","Create", new { @class = "btn btn-success btn-sm" })
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th class="col-md-2">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                if (!item.IsDeleted)
                {
                    <tr>
                        <td >
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.Mail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td >
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                            @Html.ActionLink("Datail", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
        }
    </tbody>

</table>
