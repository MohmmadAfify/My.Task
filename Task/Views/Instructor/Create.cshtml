@model Instructor

@{
    ViewBag.Title = "Add Instructor";
}

<h2>Add Instructor</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Instructor</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(c => c.Name, "Name", new { @class = "col-md-2" })
            <div>
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control col-md-9" })
                @Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Mail, "Mail", new { @class = "col-md-2" })
            <div>
                @Html.TextBoxFor(c => c.Mail, new { @class = "form-control col-md-9" })
                @Html.ValidationMessageFor(c => c.Mail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Department, "Department", new { @class = "col-md-2" })
            <div>
                @Html.TextBoxFor(c => c.Department, new { @class = "form-control col-md-9" })
                @Html.ValidationMessageFor(c => c.Department, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Phone, "Phone Number", new { @class = "col-md-2" })
            <div>
                @Html.TextBoxFor(c => c.Phone, new { @class = "form-control col-md-9" })
                @Html.ValidationMessageFor(c => c.Phone, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index","Index",new { @class="btn btn-default btn-sm"})
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}